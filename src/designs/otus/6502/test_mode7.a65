; Otus test program

	.segment "TEST"
	.org    $C000

; constants

    BASE_CRTC    := $FE00
    BASE_VIDPROC := $FE20
    ADDR         := $70

; set mode then loop forever

    JSR MODE7
FOREVER:
    JMP FOREVER

;--------------------------------------------------------------------------------
; set up mode 2

MODE2:
    LDX #<TBL_MODE2
    LDY #>TBL_MODE2
    JMP SET_MODE 

;--------------------------------------------------------------------------------
; set up mode 7

MODE7:
    LDX #<TBL_MODE7
    LDY #>TBL_MODE7
    JMP SET_MODE 

;--------------------------------------------------------------------------------

SET_MODE:
    STX ADDR
    STY ADDR+1
    LDY #0
L3:
    LDA (ADDR),Y
    STY BASE_CRTC
    STA BASE_CRTC+1
    INY
    CPY #15
    BNE L3
    LDA (ADDR),Y
    STA BASE_VIDPROC
    RTS

;--------------------------------------------------------------------------------

SET_PALETTE:
    STX ADDR
    STY ADDR+1
    LDY #0
L4:
    LDA (ADDR),Y
    STY BASE_VIDPROC+1
    INY
    CPY #16
    BNE L4
    RTS

;--------------------------------------------------------------------------------

TBL_MODE2:
    .byte $7F,$50,$62,$28,$26,$00,$20,$22
    .byte $01,$07,$67,$08,$00,00,$F4

TBL_MODE7:
    .byte $3F,$28,$33,$24,$1E,$02,$19,$1B
    .byte $93,$12,$72,$13,$20,00,$4B

TBL_SNAPPER:
    .byte $07,$16,$25,$34,$43,$52,$65,$70
    .byte $83,$97,$A3,$B0,$C6,$D2,$E6,$F5
